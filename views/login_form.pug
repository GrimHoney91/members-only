extends layout 

block content
    form(action="" method='POST')
        h1 Log In
        div.form-group
            label(for="username") Username:
            input#username.form-control(type="text" name="username" placeholder='Username' required='true' minLength='5' maxLength='30')
        div.form-group
            label(for="password") Password: 
            input#password.form-control(type="password", name="password" placeholder='Password' required='true' minLength='5' maxLength='30')
        button.submit-btn(type="submit") Log in