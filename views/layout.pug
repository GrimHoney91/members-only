doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/stylesheets/style.css")
    title=title
  body
    header
      a.home-link(href="/") 
        h1 Message Forum
      nav
        ul
          if currentUser
            li
              a.nav-links(href="/forum/message")
                div  
                p Create Message
            if currentUser.status === 'regular'
              li
                a.nav-links(href="/forum/membership")
                  div  
                  p Become member
            if currentUser.status !== 'admin'
              li
                a.nav-links(href="/forum/adminship") 
                  div 
                  p Become admin
            li
              a.nav-links(href="/forum/log-out") 
                div 
                p Log out
          else
            li
              a.nav-links(href="/forum/log-in")
                div  
                p Log in
            li
              a.nav-links(href="/forum/signup") 
                div 
                p Sign up
    main 
      block content
    footer
      h4 Grim 